---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="max-w-3xl mx-auto">
    <header class="mt-12">

      {/* 명조체 */}
      <h1 class="text-5xl text-gray-900 leading-tight font-jeju-myeongjo">
        {post.data.title}
      </h1>
      <p class="text-lg font-extralight text-gray-600 leading-relaxed">
        {post.data.description}
      </p>

      <div class="flex items-center space-x-2 mt-12 text-sm font-extralight">
        <time datetime={post.data.pubDate.toISOString()} class="text-gray-500">
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {post.data.tags && (
          <span class="text-blue-600">• {post.data.tags.join(', ')}</span>
        )}
      </div>
    </header>

    
    <hr class="border-gray-200 my-8" />

    <div class="prose prose-lg prose-gray max-w-none font-light text-lg leading-8">
      <Content />
    </div>

    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <a href="/blog" class="text-blue-600 hover:text-blue-800 transition-colors">
          ← Back to Blog
        </a>
        <div class="text-sm text-gray-500">
          <time datetime={post.data.pubDate.toISOString()}>
            Published {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
      </div>
    </footer>
  </article>
</Layout> 